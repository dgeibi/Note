{% extends "default.njk" %}

{%- block extraStyle %}
<link rel="stylesheet" href="{{ '/assets/css/github.css' | baseurl | relative }}">
{%- endblock %}

{%- block title %}
  {% if page.title %}<title>{{ page.title }} - {{ page.types | typeMaps | join(" - ") }} | {{ site.title }}</title>
  {% else %}<title>{{ site.title }}</title>
  {% endif %}
{%- endblock %}

{%- block body %}
<a href="#slide" id="slide-btn"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg></a>
<aside class="sidebar" inert>
  {% include "includes/header.njk" %}
  <input type="search" placeholder="Type or Title">
  <div id="list">
    <p class="list-name">CONTENTS</p>
    {{ list | safe }}
  </div>
</aside>

<main>
  <section class="search-result">
    <header class="search-header">
      <h1>Found&nbsp;<span class="count"></span>&nbsp;articles.</h1>
    </header>
    <ul class="suggestions"></ul>
  </section>
  <article class='page'>
    {% if page.title %}<h1 class="page-title">{{- page.title }}</h1>{% endif %}
    {% if page.toc %}<nav id="toc"></nav>{% endif %}
    <div class="page-content">
      {{- content| safe }}
    </div>
  </article>
</main>
{%- endblock -%}
